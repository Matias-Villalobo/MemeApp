<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProgressBarStyle">
        <item name="android:layout_height">@dimen/progress_bar_height</item>
        <item name="android:indeterminateTint">@color/black</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/tex_margin</item>
        <item name="android:textSize">@dimen/tex_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/padding_small_8</item>
        <item name="android:layout_marginLeft">@dimen/title_margin_size</item>
        <item name="android:layout_marginRight">@dimen/title_margin_size</item>
    </style>

    <style name="Letters">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">@dimen/bullet_text_size</item>
        <item name="android:layout_margin">@dimen/title_margin_minor_size</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:layout_marginVertical">@dimen/title_margin_size</item>
        <item name="android:layout_marginLeft">@dimen/title_margin_minor_size</item>
    </style>

</resources>
